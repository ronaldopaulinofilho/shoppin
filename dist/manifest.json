{
    "name": "Shoppin",
    "version": "1.0",
    "description": "The Simple way to save your Shoppin List",
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "http://*/",
        "https://*/"
    ],
    "browser_action": {
        "default_icon": "/images/favicon.png",
        "default_popup": "index.html"
    },
    "manifest_version": 2
}